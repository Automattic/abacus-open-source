    "babel-plugin-remove-debug": "0.0.4",
    "cross-env": "^7.0.2",
    "css-mediaquery": "^0.1.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-storybook": "^0.5.12",
    "fetch-mock-jest": "^1.5.1",
    "full-icu": "^1.3.1",
    "husky": "^4.3.8",
    "isomorphic-fetch": "^3.0.0",
    "jest": "26.6.0",
    "jest-puppeteer": "^6.1.0",
    "jest-watch-typeahead": "^0.6.5",
    "lint-staged": "^10.1.7",
    "mockdate": "^3.0.2",
    "prettier": "^2.0.5",
    "puppeteer": "^12.0.0",
    "react-test-renderer": "^16.13.1",
    "serve": "^11.3.2",
    "ts-jest": "^26.4.0",
    "ts-loader": "^8.0.4",
    "typescript": "4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.*": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "scripts": {
    "build": "react-scripts --max_old_space_size=4096 build",
    "dev": "react-scripts --max_old_space_size=4096 start",
    "docker-build": "docker build -t abacus .",
    "docker-start": "docker run -p 8888:3000 abacus:latest",
    "eject": "react-scripts eject",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "@comment jest": "Run jest with consistent TZ and LANG",
    "jest": "cross-env NODE_ICU_DATA=node_modules/full-icu TZ=America/New_York LANG=en-GB jest",
    "lint": "npm run lint:ts",
    "lint:ts": "eslint . --ext .ts,.tsx",
    "lint:ts:fix": "eslint . --ext .ts,.tsx --fix",
    "start": "serve -s build -l 3000",
    "storybook": "start-storybook -p 6006 -s public",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "@comment test:e2e": "Runs the e2e tests. It will spawn Chromium to run the tests.",
    "test:e2e": "npm run jest -- --config=jest.e2e.config.js --runInBand",
    "test:e2e:smoke": "npm run jest -- --config=jest.e2e.config.js --runInBand e2e/smoke.test.tsx",
    "test:integration": "npm run jest -- --config=jest.integration.config.js --runInBand",
    "test:unit": "npm run jest",
    "type-check": "tsc",
    "verify": "npm run format:check && npm run lint && npm run test:all",
    "build-storybook": "build-storybook -s public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "volta": {
    "node": "16.18.1",
    "npm": "8.19.2"
  }
}
