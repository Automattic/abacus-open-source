    "@types/lodash": "^4.14.155",
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/yup": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
